<Window x:Class="HelloWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Login Window" HorizontalAlignment="Center" Margin="0,17,0,0" VerticalAlignment="Top" FontSize="24" Background="#FFCD7AFF" Foreground="#FF00EDFF" Width="216"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="231,226,0,0" VerticalAlignment="Top" Height="40" Width="97" FontSize="20" Click="btnLogin_Click"/>
        <Button x:Name="btnLogout" Content="Logout" HorizontalAlignment="Left" Margin="412,226,0,0" VerticalAlignment="Top" Height="40" Width="116" FontSize="20" Click="btnLogout_Click"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="231,94,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="361,98,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="167" Height="28" FontSize="20"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="234,158,0,0" VerticalAlignment="Top" FontSize="20"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="361,162,0,0" VerticalAlignment="Top" Width="167" Height="28" FontSize="20"/>

    </Grid>
</Window>
